<% include ./partials/header %>

<div id="header" class="ui main text container">
    <div class="ui center aligned huge header"><i class="terminal icon"></i>Jaron's Blog</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
            <div class="item">
                <div class="image">
                  <img src="<%=blog.image %>">
                </div>
                <div class="content">
                   <a class="header" href="/blogs/<%= blog._id%>"><%=blog.title%></a> 
                   <div class="meta">
                        <span><%= moment(blog.created).format('ll') %></span>
                   </div>
                   <div class="description">
                         <% if(blog.body && blog.body.length > 0) { %>
                        <p><%= blog.body.substring(0, 100)%>...</p>
                        <% } %>
                   </div>
                   <div class="extra">
                         <a class="ui floated basic green tiny button" href="/blogs/<%= blog._id%>">
                             Read More
                             <i class="right chevron icon"></i>
                         </a>  
                    </div>
                   </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>


<% include ./partials/footer %>